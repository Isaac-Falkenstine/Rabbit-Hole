

<div class="container">
<div class=question_title>
<h2><%= @facade.current_question.title %></h2>
</div>

<div class="card">
  <h3>Notes</h3>
  <%= form_for [@facade.user, @facade.current_question], url: user_topic_question_path(@facade.topic), method: :patch do |f|  %>
    <div class="question_note_area">
      <% if !@facade.current_question.notes_text %>
        <%= text_area_tag(:notes_text, "Write notes here!", size: "120x6") %>
      <% else %>
        <%= text_area_tag(:notes_text, "#{@facade.current_question.notes_text}", size: "120x6") %>
      <% end %>
    </div>
    <div class="question_note_save">
      <%= f.submit "Save Note", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

<div class="card">
  <div class="bing_results">
    <h3>Bing results</h3>
      <% @facade.bing_search(@facade.current_question).each do |link| %>
        <div class="search_results">
          <%= link_to "#{link.title}", link.saved_url %> <br>
        </div>
      <%end%>
  </div>
</end>

<div class="card">
  <div class="all_saved_links">
    <h3>Saved Links</h3>

    <%= link_to 'Add New Link', "/user/topics/#{@facade.topic.id}/questions/#{@facade.current_question.id}/links/new.js", remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary' %>

    <div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
    </div>

    <% @facade.current_question_links.each do |link| %>
      <div class="saved_link">
        <%= link_to "#{link.name}", "http://#{link.website_link_text}" %> <br>
      </div>
    <%end%>
  </div>
</div>
</div>
