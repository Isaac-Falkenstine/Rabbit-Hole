<div class="container">

<h2><%= @facade.current_question.title %></h2>

<div class="bing_results">
  <h3>Bing results</h3>
    <% @facade.bing_search(@facade.current_question).each do |link| %>
      <div class="search_results">
        <%= link_to "#{link.title}", link.url %> <br>
      </div>
    <%end%>
</div>

<div class="all_saved_links">
  <h3>Saved Links</h3>

  <%= link_to 'Add new link', new_user_topic_question_link_path(@facade.topic, @facade.current_question), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'} %>


<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>

  <% @facade.current_question_links.each do |link| %>
    <div class="saved_link">
      <%= link_to "#{link.name}", link.url %> <br>
    </div>
  <%end%>
</div>
