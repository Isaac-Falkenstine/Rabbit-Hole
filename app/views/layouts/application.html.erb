    <%= javascript_pack_tag 'application' %>
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag 'application' %>

  </head>

  <body>

    <header>
      <%= render 'partials/nav' %>
    </header>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>

    <div class="content">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </div>

  </body>

</html>
